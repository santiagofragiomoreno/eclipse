<?php
$nombre='Santi Fragio';
///////// funcion strlen() //////////
/*
 * nos cuenta los caracteres de un string (incluyendo los espacios en blanco)
 */

$nombre_separado = explode('a', $nombre);
?>
<!DOCTYPE html>
<html>
<head>
<meta  charset="UTF-8">
<title></title>
</head>
<body>
	<p><?php echo strlen($nombre);?></p>
	<pre><?php print_r($nombre_separado);?></pre>
</body>
</html>
