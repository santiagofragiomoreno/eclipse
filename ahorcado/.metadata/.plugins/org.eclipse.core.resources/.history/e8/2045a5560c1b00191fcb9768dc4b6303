 };

 /*
    *funcion para la letra pulsada
  */
 function letra_pulsada(letras_teclado){
    for(var i=0;i<letras_teclado;i++){
        (function(indice){
            letras_teclado[indice].onclick = function(evento){
                evento.preventDefault();
                console.log(letras_teclado[i]);
            }
        })(i);
    }
 }
 /*
