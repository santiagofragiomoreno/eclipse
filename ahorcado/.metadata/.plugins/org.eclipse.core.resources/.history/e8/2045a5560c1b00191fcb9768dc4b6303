 /*
  * Declaramos la funcion de Ajax para la lectura del Objeto Palabras
  */
 function Ajax(letra_pulsada){
    //creamos el REQUEST (conexion)
	var conexion = new XMLHttpRequest();
	conexion.onreadystatechange=function(){
